<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Task Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheet/style.css">
</head>

<body class="bg-black">
    <h1 class="text-white text-3xl font-bold text-center py-6">Status Update</h1>

    <div class="main w-full min-h-screen bg-zinc-900 px-4">
        <!-- Form Section -->
        <div class="form bg-zinc-800 p-8 rounded-lg shadow-md mx-auto max-w-4xl text-white">
            <form action="/create" id="myForm" method="post" class="space-y-8">
                <div>
                    <label for="username" class="block text-sm font-medium leading-6 text-white">
                        Username
                    </label>
                    <div class="mt-2">
                        <input type="text" name="username" id="username" autocomplete="username"
                            class="w-full rounded-md bg-black py-2 px-3 text-sm text-white placeholder:text-zinc-500 focus:ring-2 focus:ring-indigo-600 focus:outline-none"
                            placeholder="Enter title for the notes to be shown">
                    </div>
                </div>

                <div>
                    <label for="about" class="block text-sm font-medium leading-6 text-white">
                        About
                    </label>
                    <div class="mt-2">
                        <textarea id="about" name="about" rows="4"
                            class="w-full rounded-md bg-black py-2 px-3 text-sm text-white placeholder:text-zinc-500 focus:ring-2 focus:ring-indigo-600 focus:outline-none"
                            placeholder="Enter the description"></textarea>
                    </div>
                </div>

                <div class="flex items-center justify-end gap-x-6">
                    <button id="cancelBtn" type="button"
                        class="text-sm font-semibold text-white hover:text-yellow-500 transition duration-200">
                        Cancel
                    </button>
                    <button type="submit"
                        class="rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus:ring-2 focus:ring-indigo-600">
                        Save
                    </button>
                </div>
            </form>
        </div>

        <!-- Task Section -->
        <div class="tasks flex flex-wrap gap-6 p-6 justify-center">
            <% if (files.length > 0) { %>
                <% files.forEach(function (val) { %>
                    <div class="task w-full sm:w-72 p-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-xl font-bold mb-2"><%= val %></h1>
                        <div class="flex justify-between">
                            <a class="text-blue-500 hover:underline" href="/file/<%= val %>">See more</a>
                            <a class="text-blue-500 hover:underline" href="/edit/<%= val %>">Edit</a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <h3 class="text-white text-center text-lg">No tasks yet</h3>
            <% } %>
        </div>
    </div>

    <script>
        document.getElementById("cancelBtn").addEventListener("click", function () {
            document.getElementById("myForm").reset();
        });
    </script>
</body>

</html>
